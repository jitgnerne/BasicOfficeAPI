generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Worker {
    id    String   @id @default(auto()) @map("_id") @db.ObjectId
    name  String
    age   Int
    email String @unique
    JobFunction String
    WorkTime Int
    course String
    workplaceID  String  @db.ObjectId
    workplace  Workplace  @relation(fields: [workplaceID], references: [id])
}

model Workplace {
    id    String   @id @default(auto()) @map("_id") @db.ObjectId
    name  String
    cep   String
    number  String
    workers Worker[]
}

